<Window x:Class="Alimnetar2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alimnetar2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Importador de Datos desde TXT a SQL" FontSize="16" FontWeight="Bold" Margin="0,10,0,20"/>

            <Button Name="BtnSeleccionarArchivo" Content="Seleccionar Archivo" Width="200" Height="40" Click="BtnSeleccionarArchivo_Click"/>

            <TextBlock Name="TxtArchivoSeleccionado" Text="Ningún archivo seleccionado" FontSize="12" Foreground="Gray" Margin="10"/>

            <ProgressBar Name="ProgressBar" Width="200" Height="10" Visibility="Hidden"/>

            <TextBlock Name="TxtEstado" Text="" FontSize="12" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
